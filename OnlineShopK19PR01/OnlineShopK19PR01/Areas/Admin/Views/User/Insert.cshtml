@model Models.Framework.User

@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    Thêm tài khoản.}
<hr />

@using (Html.BeginForm("Insert", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

