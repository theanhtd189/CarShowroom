
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<OnlineShopK19PR01.Models.CartItem>
@section JsFooter{

    <script src="/Assets/Client/js/Controller/CartController.js"></script>
}
<div class="content">
    <div class="section group">

        @if (Model != null)
        {
                <table class="table">
                    <thead>
                        <tr>
                            <td>Mã SP</td>
                            <td>Tên SP</td>
                            <td>Ảnh SP</td>
                            <td>Số lượng</td>
                            <td>Đơn giá</td>
                            <td>Thành tiền</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Product.ID</td>
                                <td>@item.Product.Name</td>
                                <td><img src="@item.Product.Image" width="100" /></td>
                                <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Product.Quantity" /></td>
                                <td>@item.Product.Price.ToString("N0")</td>
                                <td>@((item.Product.Price * item.Product.Quantity))</td>
                                <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xoá</a></td>
                            </tr>
                        }

                    </tbody>
                </table>

                <button id="btnContinue" class="btn">Tiếp tục mua hàng</button>
                <button id="btnUpdate" class="btn">Cập nhật giỏ hàng</button>
                <button id="btnDeleteAll" class="btn">Xoá giỏ hàng</button>
                <button id="btnPayment" class="btn">Thanh toán</button> 
        }
        else
        {
            <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
        }

    </div>
</div>

