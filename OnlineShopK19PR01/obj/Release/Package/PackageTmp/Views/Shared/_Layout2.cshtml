                        var s = Session["idnguoidung"];
                        var Name = new UserDAL().GetById((long)s).Name;
                        <style>.tel { width:187.6px;}
                        </style>
                        <div class="media align-items-center">
                            <a href="@Url.Action("","Nguoidung")" class="avatar avatar-sm rounded-circle">
                                <img alt="avatar" src="https://lh3.googleusercontent.com/a-/AOh14Gjz9k019WKC2n_68llZLG8vAUL5fJvvWdKV73G-=s360-p-rw-no">
                            </a>
                            <ul class="media-body ml-2 d-none d-lg-block">
                                <span class="mb-0 text-sm  font-weight-bold"><a href="">@Name</a></span>
                                <li><a href="/nguoidung/logout">Đăng xuất</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <button class="log"><a href="@Url.Action("","dangnhap")">Đăng ký / Đăng nhập</a></button>
                    }
                </li>
            </ul>
            <a rel="nofollow" class="button-menu mobile" href="javascript:void(0);" onclick="$('.menu').slideToggle('slow');">☰</a>
