    var url_tintuc = "#tintuc";
    var url_trangchu = "#";

    var current_controller = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    if(!current_controller.Contains("Trangchu"))
    {
        url_sanpham = Url.Action("", "sanpham");
        url_trangchu = Url.Action("", "trangchu");
        url_tintuc = Url.Action("", "tintuc");
