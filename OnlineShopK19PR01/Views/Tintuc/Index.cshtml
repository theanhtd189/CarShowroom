@using Models.DAL
@{
    ViewBag.Title = "Index tuc tuc";
    Layout = "~/Views/Shared/_Layout2.cshtml";
    var list = (List<Models.Framework.Content>)ViewBag.listall;
}


<section id="page-blog">
    <div class="container">
        <h1 class="block-title">Tin tức thị trường xe ô tô</h1>
        <div class="row blogs">

            @if (list != null && list.Count > 0)
            {
                foreach (var item in list)
                {
                    <div class="col col-3 blog">
                        <a href="@Url.Action("detail","tintuc",new {item.ID })">
                            <div class="vp" style="background-image: url('@item.Image');">
                                <img src="@item.Image">
                            </div>
                            <h3>@item.Name </h3>
                        </a>
                    </div>
                }
            }

        </div>
    </div>
</section>
